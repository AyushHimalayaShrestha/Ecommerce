@model Product
@{
    ViewData["Title"] = "DeleteProduct";
}

<div class="card w-75 my-5 shadow-lg rounded rounded-3 mx-auto">
    <div class="card-header bg-dark text-white py-5">
<h1 class="text-center">DeleteProduct</h1>
</div>
<div class="card-body p-5 d-flex"> 
<form method="post" action="DeleteProduct" enctype="multipart/form-data" class="w-50">
    <input type="hidden" asp-for="Rating" value="1" />
    <input type="hidden" asp-for="ID" />
    <input type="hidden" asp-for="ImageUrl" />
    <div class="form-floating mb-2">
        <input asp-for="Title" class="form-control" placeholder="eg: Product Name" disabled/>
        <label asp-for="Title"></label>
    </div>
    <div class="form-floating mb-2">
        <input asp-for="Price" class="form-control" placeholder="eg: 123" disabled/>
        <label asp-for="Price"></label>
    </div>
    <div class="form-floating mb-2">
        <input asp-for="Stock" class="form-control" placeholder="eg: Product Name" disabled />
        <label asp-for="Stock"></label>
    </div>
        <div class="form-floating mb-2">
            <input asp-for="Category.CategoryName" class="form-control" placeholder="eg: Product Name" disabled/>
            <label asp-for="Category"></label>
        </div>
    <div class="form-floating mb-2">
        <textarea asp-for="Description" class="form-control" placeholder="eg: Product Name" style="resize:none; height:150px;"></textarea>
        <label asp-for="Description"></label>
    </div>
  
 

        <button class="btn btn-warning w-100 mt-3" onclick="return confirm('Are you sure?')">Delete Product</button>
   
</form>
        <div class="w-50">

            <img src="~/Images/Products/@Model.ImageUrl" class="w-100 ps-4"/>

        </div>
</div>
</div>
@section Scripts{
    <Partial name="_ValidationScriptsPartial" />
}
