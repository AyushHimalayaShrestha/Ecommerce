@using Model;
@model ShoppingCartViewModel

<div class="container">
    <form method="post">
        <input type="hidden" asp-for="OrderHeader" />
        <input type="hidden" asp-for="shoppingCarts" />
    <div class="card">
        <div class="card-header bg-dark text-center py-3">
            <a asp-action="Index" class="text-white fs-3 text-decoration-none">Go Back</a>
        </div>
        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-6">
                    <h3>Shipping Information</h3>

                    <div class="form-floating mb-2">
                        <input asp-for="OrderHeader.Name" class="form-control" />
                        <label asp-for="OrderHeader.Name"></label>
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="OrderHeader.PhoneNumber "class="form-control" />
                        <label asp-for="OrderHeader.PhoneNumber"></label>
                    </div>

                    <div class="form-floating mb-2">
                        <input asp-for="OrderHeader.StreetAddress" class="form-control" />
                        <label asp-for="OrderHeader.StreetAddress"></label>
                    </div>
                    <div class="form-floating mb-2">
                        <input asp-for="OrderHeader.City" class="form-control"/>
                        <label asp-for="OrderHeader.City"></label>
                    </div>
                        <div class="form-floating mb-2">
                            <input asp-for="OrderHeader.PostalCode " class="form-control" />
                            <label asp-for="OrderHeader.PostalCode"></label>
                        </div>
                        <div class="form-floating mb-2">
                            <input asp-for="OrderHeader.State " class="form-control" />
                            <label asp-for="OrderHeader.State"></label>
                        </div>
                    <div class="form-floating mb-2">
                        <input asp-for="OrderHeader.Country "class="form-control" />
                        <label asp-for="OrderHeader.Country"></label>
                    </div>

                </div>
                <div class="col-md-6 ps-5">
                    <h3>Cart Summary</h3>

                    <div class="border p-2">
                    @foreach (var item in Model.shoppingCarts)
                    {
                        
                        <div class="d-flex justify-content-between px-2">
                            <div>
                                <h5> @item.Product.Title</h5>
                                <h6>@item.Product.Price X @item.Quantity</h6>
                            </div>
                            <div>
                                <h5>@(item.Product.Price * item.Quantity)</h5>
                            </div>
                        </div>
                            <hr class="my-1" />

                    }
                    </div>
                </div>
            </div>
  
        </div>
    </div>
    <div class="card-footer py-3 text-end">
        <button class="btn btn-warning" asp-action="CheckOut">Proceed to Payment</button>
    </div>
    </form>
</div>
